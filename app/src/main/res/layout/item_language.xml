<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/clItemLanguage"
    android:layout_height="50dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glV24"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glV82"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82" />

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/mLLanguage"
        android:src="@drawable/vietnam"
        app:layout_constraintEnd_toStartOf="@+id/glV24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLanguage"
        android:gravity="center"
        android:fontFamily="@font/hobostd"
        android:textColor="@color/colorBlue"
        android:paddingHorizontal="@dimen/paddingTvLanguage"
        android:textSize="@dimen/tsTvLanguage"
        android:text="@string/LblFrance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/glV24"
        app:layout_constraintEnd_toStartOf="@+id/glV82"
        />

    <ImageView
        android:id="@+id/imgCheckIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/check_icon"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/glV82"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>